  </head>
  <body>

     <nav class="navbar navbar-toggleable-md navbar-inverse bg-inverse fixed-top">
      <button id="btn" class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#nav-sidebar" aria-controls="nav-sidebar" aria-expanded="false" aria-label="Toggle navigation" title="navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
       <a class="navbar-brand navbar-brand-short" href="<%= chapters_path %>/..">SICP JS</a>
       <a class="navbar-brand navbar-brand-long" href="<%= chapters_path %>/..">Structure and Interpretation
          of Computer Programs<BR/>JavaScript Adaptation</a>
     </nav>

     
     <div class="container scroll">

       <div class="collapse" id="nav-sidebar" role="tablist" aria-multiselectable="true">
	 <!-- insert a dummy entry, to give one extra line of space -->
         <a class="navbar-brand" href=".">&nbsp;</a>
         <% Chapter.roots.all.order(:order).each do |chapter| %>
         <%= content_links(chapter, "nav-sidebar", "sidebar").html_safe %>
         <% end %>
       </div>

           <%= yield %>
     </div><!-- /.container -->


